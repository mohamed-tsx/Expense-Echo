generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  expense Expense[]
}


model Expense {
  id String @id @default(uuid())
  userId String
  amount Float
  description String
  date DateTime @default(now())
  user User @relation(fields: [userId],references: [id])
}
